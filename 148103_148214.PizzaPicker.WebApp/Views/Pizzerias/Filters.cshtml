@using _148103_148214.PizzaPicker.CORE;
@model _148103_148214.PizzaPicker.WebApp.Models.PizzeriaFilterModel

@using (Html.BeginForm("ViewCombinedFilter", "Pizzerias", FormMethod.Post))
{
    <div class="filter-section">
        <h3>Filter Pizzerias</h3>
        <div>
            <label>Id</label>
        </div>
        <div class="form-group row">
            <div class="col-md-2">
                <label>From</label>
            </div>
            <div class="col-md-4">
                <input type="number" class="form-control" asp-for="LowerIdBound" />
            </div>
            <div class="col-md-2">
                <label>To</label>
            </div>
            <div class="col-md-4">
                <input type="number" class="form-control" asp-for="UpperIdBound" />
            </div>
        </div>

        <div class="form-group">
            <label for="Name">Name</label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>

        <div class="form-group">
            <label for="Address">Address</label>
            <input type="text" class="form-control" asp-for="Address" />
        </div>

        <div class="form-group">
            <label for="SupportedPostalCodes">SupportedPostalCodes</label>
            <input type="text" class="form-control" asp-for="SupportedPostalCodes" />
        </div>

        <input type="submit" id="applyFiltersBtn" value="Apply Filters" class="btn btn-primary" />
        <button type="button" onclick="clearAndSubmit()" class="btn btn-secondary">Clear filters</button>
    </div>

    <script type="text/javascript">
        function clearAndSubmit() {

            document.getElementById('LowerIdBound').value = '';
            document.getElementById('UpperIdBound').value = '';
            document.getElementById('Name').value = '';
            document.getElementById('Address').value = '';
            document.getElementById('SupportedPostalCodes').value = '';

            document.getElementById('applyFiltersBtn').click();
        }
    </script>
}

    